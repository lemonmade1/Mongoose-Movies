<%- include('../partials/header') %>

<table id="list">
  <thead>
    <tr>
      <th>Title</th>
      <th>Release<br>Year</th>
      <th>Details</th>
      <th>Delete</th>
      <th>Edit</th>
    </tr>
  </thead>
  <tbody>
    <% flights.forEach(function(m) { %>
      <tr>
        <td><%= m.title %></td>
        <td><%= m.releaseYear %></td>
        <td><a href="/flights/<%= m._id %>">DETAILS</a></td>

        <td>
          <form action="/flights/<%= m.id %>?_method=DELETE" method="POST">
            <input type="submit" value="DELETE" />
          </form>
        </td>

        <td>
          <a href="/flights/<%= m.id %>/edit">Edit</a>
        </td>
      </tr>
      <% }); %>
    </tbody>
  </table>
  
<%- include('../partials/footer') %>
